# window appearance
for_window [class="^.*"] border pixel 2
gaps inner 15
gaps outer 0
                          #border #backgr #text   #indict
client.focused            #0088CC #0088CC #FFFFFF #FFFFFF
client.focused_inactive   #333333 #333333 #FFFFFF #FFFFFF
client.unfocused          #333333 #333333 #FFFFFF #FFFFFF
client.urgent             #333333 #333333 #FFFFFF #FFFFFF
